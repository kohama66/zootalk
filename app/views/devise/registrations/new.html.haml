.main
  .new-user-main
    新規ユーザー登録画面
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :メールアドレス
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email"
    .field
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password"
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password"
    .radio-button
      - @icon.each do |icon|
        = f.radio_button :icon_id, icon.id
    .actions
      = f.submit "Sign up", class: "btn btn-primary"
  = render "devise/shared/links"
  .icon-select
    = image_tag "dog.png", :size =>'200x200', id: "dog-icon"
    %label(for="user_icon_id_2")  
      = image_tag "cat.png", :size =>'200x200'
    %label(for="user_icon_id_3")  
      = image_tag "fox.png", :size =>'200x200'
    %label(for="user_icon_id_4")  
      = image_tag "bird.png", :size =>'200x200'
    %label(for="user_icon_id_5")  
      = image_tag "elf.png", :size =>'200x200'    
.popup
  .popup__message
    .row
      .col.s12.m6
        .card.blue-grey
          .card-content.white-text
            %p
              アイコンは 犬 でよろしいですか？
            %p
              後から変更することは出来ません
          .card-action
            %label(for="user_icon_id_1")
              はい
              いいえ